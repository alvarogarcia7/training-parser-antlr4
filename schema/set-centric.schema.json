{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/set-centric.schema.json",
  "title": "Set-Centric Workout Schema",
  "description": "Schema for workout data organized by individual sets",
  "type": "object",
  "properties": {
    "workout": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the workout in YYYY-MM-DD format"
        },
        "exercises": {
          "type": "array",
          "description": "List of exercises performed in the workout",
          "items": {
            "$ref": "#/definitions/exercise"
          },
          "minItems": 1
        }
      },
      "required": ["date", "exercises"],
      "additionalProperties": false
    }
  },
  "required": ["workout"],
  "additionalProperties": false,
  "definitions": {
    "exercise": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the exercise",
          "minLength": 1
        },
        "sets": {
          "type": "array",
          "description": "List of sets performed for this exercise",
          "items": {
            "$ref": "#/definitions/set"
          },
          "minItems": 1
        }
      },
      "required": ["name", "sets"],
      "additionalProperties": false
    },
    "set": {
      "type": "object",
      "properties": {
        "setNumber": {
          "type": "integer",
          "description": "The sequential number of the set",
          "minimum": 1
        },
        "repetitions": {
          "type": "integer",
          "description": "Number of repetitions performed",
          "minimum": 1
        },
        "weight": {
          "$ref": "#/definitions/weight"
        }
      },
      "required": ["setNumber", "repetitions", "weight"],
      "additionalProperties": false
    },
    "weight": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The numeric weight value",
          "minimum": 0
        },
        "unit": {
          "type": "string",
          "description": "The unit of weight measurement",
          "enum": ["kg", "lb", "lbs"]
        }
      },
      "required": ["amount", "unit"],
      "additionalProperties": false
    }
  }
}
